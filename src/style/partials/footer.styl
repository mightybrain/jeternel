.foot
    box-sizing border-box
    width 100%
    padding 73px 0 30px 0
    background-color main-gold

    &__top
        display flex
        flex-wrap nowrap
        justify-content space-between
        width calc(100% - 128px)
        max-width 1500px
        margin 0 auto 89px auto
        @media tablet-landscape-large
            width calc(100% - 80px)
        @media tablet-portrait
            width calc(100% - 60px)
        @media phone
            width calc(100% - 40px)

    &__branches
        width calc(25% - 24px)
        @media tablet-landscape-small
            display none
        @media phone
            display block
            width 100%

        &-list
            margin 0
            padding 0
            list-style none
            text-align center

        &-item
            text-align center

        &-item + &-item
            margin 23px 0 0 0

        &-address
            display block
            font-family "Helvetica-Neue"
            font-size 15px
            line-height 25px
            font-weight 300
            color gray-gold

        &-phone
            font-family "Helvetica-Neue"
            font-size 15px
            line-height 25px
            font-weight 300
            color white
            text-decoration none
            outline none

    &__sitemap
        width calc(75% - 24px)
        @media tablet-landscape-small
            width calc(100% + 40px)
            margin 0 0 0 -40px
        @media tablet-portrait
            width calc(100% + 30px)
            margin 0 0 0 -30px
        @media phone
            display none

    &__bottom
        display flex
        flex-direction column
        align-items center
        width calc(100% - 40px)
        max-width 500px
        margin 0 auto

    &__site-copyright
        margin 0 0 12px 0
        font-family "Helvetica-Neue"
        font-size 15px
        line-height 25px
        font-weight 300
        color white

    &__personal-link
        margin 43px 0 0 0
        font-family "Helvetica-Neue"
        font-size 15px
        line-height 25px
        font-weight 300
        color white
        text-align center
        text-decoration none
        outline none       

.sitemap
    display flex
    flex-wrap nowrap
    
    &__list
        width calc(100% / 3 - 96px / 3)
        margin 0
        padding 0
        list-style none
        @media tablet-landscape-small
            width calc(100% / 3 - 40px)
            margin 0 0 0 40px
        @media tablet-portrait
            width calc(100% / 3 - 30px)
            margin 0 0 0 30px

    &__list + &__list
        margin 0 0 0 48px
        @media tablet-landscape-small
            margin 0 0 0 40px
        @media tablet-portrait
            margin 0 0 0 30px

    &__item
        text-align center
        font-family "Helvetica-Neue"
        font-size 12px
        line-height 24px
        font-weight 300
        color white
        text-transform uppercase
        letter-spacing 3px

    &__item + &__item
        margin 31px 0 0 0

    &__link
        text-decoration none
        color inherit
        outline none
        opacity 1
        transition opacity .3s 0s ease

        &:hover
            opacity .5

    &__submenu
        &-list
            margin 15px 0 0 0
            padding 0
            list-style none

        &-item
            font-family "Helvetica-Neue"
            font-size 15px
            line-height 19px
            font-weight 300
            color gray-gold
            text-transform none
            letter-spacing normal

        &-item + &-item
            margin 14px 0 0 0

        &-link
            text-decoration none
            color inherit
            outline none
            transition color .3s 0s ease

            &:hover
                color white

.developer
    display flex
    flex-wrap nowrap
    align-items flex-start

    &__link
        font-family "Helvetica"
        font-size 12px
        line-height 15px
        font-weight 800
        color white
        text-transform uppercase
        text-decoration none
        letter-spacing 2px
        padding 3px 4px 3px 6px
        border-radius 3px
        background-color rgba(255 255 255 .25)
        transition background-color .3s 0s ease

        &:hover
            background-color rgba(255 255 255 .35)

    &__hint
        margin-left 7px
        font-family "helvetica"
        font-size 9px
        line-height 11px
        font-weight 300
        color white
        text-transform uppercase
        letter-spacing 2px