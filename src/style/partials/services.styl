.services
    &--index
        @media tablet-landscape-medium
            box-sizing border-box
            width calc(100% - 80px)
            margin 0 auto
            padding 40px 0
        @media tablet-portrait
            width calc(100% - 60px)
            padding 30px 0
        @media phone
            width calc(100% - 40px)
            padding 20px 0 50px 0

    &__list
        display flex
        flex-wrap wrap
        margin 0
        padding 0
        list-style none
        @media tablet-landscape-medium
            justify-content space-between
            margin 0 0 -60px 0
        @media phone
            flex-direction column

    &__item-wrapper
        display flex
        justify-content center
        align-items center
        width 50%
        @media tablet-landscape-medium
            display block
            width calc(50% - 20px)
            margin 0 0 60px 0
            text-align center
        @media tablet-portrait
            width calc(50% - 15px)
        @media phone
            width 100%

    &__item
        width 100%
        
.services__item-wrapper:nth-child(4n+1),
.services__item-wrapper:nth-child(4n+4)
    & .services__item
        max-width 436px
        @media laptop
            max-width 350px
        @media tablet-landscape-medium
            max-width none

.service-preview
    position relative
    width 100%
    padding-top 100%
    @media tablet-landscape-medium
        position static
        padding-top 0

    &__image-wrapper
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        background-color black
        overflow hidden
        @media tablet-landscape-medium
            position relative
            height 0
            margin 0 0 30px 0
            padding-top 100%

    &__image
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        display block
        width 101%
        height 101%
        object-fit cover
        opacity .75
        transition transform 1s 0s ease

        &:hover
            transform translate(-50%, -50%) scale(1.05)

    &__title
        position absolute
        top calc(100% + 44px)
        left 50%
        transform translateX(-50%)
        width 100%
        text-align center
        @media tablet-landscape-medium
            position static
            transform none

        &-link
            font-family "Helvetica-Neue"
            font-size 12px
            line-height 22px
            font-weight 300
            color main-gold
            text-transform uppercase
            letter-spacing 3px
            text-decoration none
            outline none
            opacity 1
            transition opacity .3s 0s ease

            &:hover
                opacity .5

.service-preview--link-overflow
    & .service-preview__title-link
        position absolute
        top auto
        bottom 100px
        left 50%
        transform translateX(-50%)
        max-width 436px
        color white
        @media tablet-landscape-medium
            position static
            max-width none
            transform none
            color main-gold
