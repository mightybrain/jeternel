.appeal
    box-sizing border-box
    width 100%
    padding 115px 0 121px 0
    background-color main-gold

    &__top
        position relative
        height 300px
        margin 0 0 71px 0
        @media tablet-landscape-small
            height 240px
        @media tablet-portrait
            margin 0 0 90px 0

    &__photo
        position relative
        display block
        height 100%
        margin 0 auto

    &__hint
        position absolute
        top 26px
        left calc(50% + 130px)
        @media tablet-landscape-small
            top 0
            left calc(50% + 100px)
        @media tablet-portrait
            top auto
            left 50%
            bottom -10px
            transform translateX(-50%) translateY(100%)
            text-align center

    &__name
        display block
        margin 0 0 1px 0
        font-family "Helvetica-Neue"
        font-size 15px
        line-height 19px
        font-weight 300
        color white

    &__position
        font-family "Helvetica-Neue"
        font-size 15px
        line-height 19px
        font-weight 300
        color gray-gold

    &__background
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        display flex
        flex-wrap nowrap
        perspective 960px
        perspective-origin 0 50%
        @media tablet-landscape-small
            transform translate(-50%, -50%) scale(.6)
        @media phone
            display none

        & img
            position relative
            top 0
            display block
            opacity .1
            transform rotateY(0)

            &:nth-child(1)
                transition transform 1.5s 0s ease, opacity 1.5s 0s ease, top 1.5s 0s ease

            &:nth-child(2)
                transition transform 1.5s .1s ease, opacity 1.5s .1s ease, top 1.5s .1s ease

            &:nth-child(3)
                transition transform 1.5s .2s ease, opacity 1.5s .2s ease, top 1.5s .2s ease

            &:nth-child(4)
                transition transform 1.5s .3s ease, opacity 1.5s .3s ease, top 1.5s .3s ease

            &:nth-child(5)
                transition transform 1.5s .4s ease, opacity 1.5s .4s ease, top 1.5s .4s ease

            &:nth-child(6)
                transition transform 1.5s .5s ease, opacity 1.5s .5s ease, top 1.5s .5s ease

            &:nth-child(7)
                transition transform 1.5s .6s ease, opacity 1.5s .6s ease, top 1.5s .6s ease

            &:nth-child(8)
                transition transform 1.5s .7s ease, opacity 1.5s .7s ease, top 1.5s .7s ease

    &__bottom
        display flex
        flex-direction column
        align-items center
        width calc(100% - 60px)
        max-width 800px
        margin 0 auto
        @media laptop
            max-width 600px
        @media phone
            width calc(100% - 40px)

    &__description
        text-align center

        & p:not([class])
            margin 0
            font-family "Cormorant"
            font-size 36px
            line-height 40px
            font-weight 300
            color white
            @media laptop
                font-size 32px
                line-height 36px
            @media phone
                font-size 28px
                line-height 32px

        & p:not([class]) + p:not([class])
            margin 24px 0 0 0

    &__button
        margin 61px 0 0 0

.js-animated-showing
    & .appeal__background img
        top 50px
        opacity 0
        transform rotateY(45deg)