.sales
    &--index
        margin 164px auto 156px auto

    &__info
        width calc(100% - 128px)
        max-width 1332px
        margin 0 auto
        @media tablet-landscape-large
            width calc(100% - 80px)
        @media tablet-portrait
            width calc(100% - 60px)
        @media phone
            width calc(100% - 40px)

    &__heading
        display block
        margin 0 0 51px 0
        font-family "Cormorant"
        font-size 36px
        line-height 40px
        font-weight 300
        color black
        @media laptop
            font-size 32px
            line-height 36px
        @media phone
            font-size 28px
            line-height 32px
            text-align center

    &__link-container
        margin 68px 0 0 0
        text-align center

    &__link
        font-family "Helvetica-Neue"
        font-size 12px
        line-height 22px
        font-weight 300
        color main-gold
        text-decoration none
        text-transform uppercase
        letter-spacing 3px
        opacity 1
        transition opacity .3s 0s ease

        &:hover
            opacity .5

.sales-slider
    position relative
    width 100%

    &__container
        width calc(100% - 128px)
        max-width 1126px
        margin 0 auto
        @media laptop
            max-width 918px
        @media tablet-landscape-medium
            max-width 800px
        @media tablet-portrait
            width calc(100% - 122px)
            max-width 350px
        @media phone
            width calc(100% - 40px)

    &__list
        display flex
        flex-wrap nowrap
        height auto
        margin 0
        padding 0
        list-style none
        transition-delay .5s 
        
    &__item
        display flex
        flex-direction column
        align-items center
        width 436px
        @media laptop
            width 350px
        @media tablet-portrait
            width 100%

    &__image-wrapper
        position relative
        width 100%
        padding-top 100%
        background-color black
        overflow hidden

        &::after
            content ""
            position absolute
            top 0
            left 0
            display block
            width 100%
            height 100%
            background-color lightest-gray
            transition left .5s 0s ease

    &__image
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        display block
        width 101%
        height 101%
        object-fit cover
        opacity .9
        transition transform 1s 0s ease

        &:hover
            transform translate(-50%, -50%) scale(1.05)

    &__title
        position relative
        top 10px
        display block
        width 100%
        max-width 336px
        margin 44px 0 16px 0
        text-align center
        opacity 0
        transition top .5s 0s ease, opacity .5s 0s ease
        @media tablet-landscape-medium
            margin 30px 0 16px 0

        &-link
            font-family "Helvetica-Neue"
            font-size 12px
            line-height 22px
            font-weight 300
            color main-gold
            text-decoration none
            text-transform uppercase
            letter-spacing 3px
            opacity 1
            transition opacity .3s 0s ease

            &:hover
                opacity .5

    &__description
        position relative
        top 30px
        display block
        width 100%
        max-width 336px
        margin 0
        font-family "Helvetica-Neue"
        font-size 15px
        line-height 25px
        font-weight 300
        color black
        text-align center
        opacity 0
        transition top .5s 0s ease, opacity .5s 0s ease

    &__arrows
        position absolute
        left 50%
        top 50%
        transform translate(-50%, -50%)
        width calc(100vw - 145px)
        @media tablet-landscape-large
            width calc(100vw - 97px)
        @media tablet-landscape-small
            width calc(100vw - 80px)
        @media tablet-portrait
            width calc(100vw - 60px)
        @media phone
            position static
            transform none
            display flex
            flex-wrap nowrap
            justify-content space-between
            width 100px
            margin 60px auto 0 auto

    &__arrow
        &-left
            position absolute
            top 50%
            left 0
            transform translateY(-50%)
            @media phone
                position static
                transform none

        &-right
            position absolute
            top 50%
            right 0
            transform translateY(-50%)
            @media phone
                position static
                transform none

.sales-slider__item:nth-child(odd)
    &::before
        content ""
        display block
        width 100%
        max-width 436px
        height 80px
        @media tablet-portrait
            display none

.swiper-slide-active
    & .sales-slider__image-wrapper::after
        left 100%
        transition left .5s 1.7s ease
        @media tablet-portrait
            transition left .5s .8s ease

    & .sales-slider__title,
    & .sales-slider__description
        top 0
        opacity 1
        transition top .5s 1.7s ease, opacity .5s 1.7s ease
        @media tablet-portrait
            transition top .5s .8s ease, opacity .5s .8s ease

.swiper-slide-next
    & .sales-slider__image-wrapper::after
        left 100%
        transition left .5s 1.7s ease
        @media tablet-portrait
            left 0
            transition left .5s 0s ease

    & .sales-slider__title
        top 0
        opacity 1
        transition top .5s 1.7s ease, opacity .5s 1.7s ease
        @media tablet-portrait
            top 10px
            opacity 0
            transition top .5s 0s ease, opacity .5s 0s ease

    & .sales-slider__description
        top 0
        opacity 1
        transition top .5s 1.7s ease, opacity .5s 1.7s ease
        @media tablet-portrait
            top 30px
            opacity 0
            transition top .5s 0s ease, opacity .5s 0s ease        
