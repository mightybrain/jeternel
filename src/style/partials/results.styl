.results
    max-width 1126px
    margin 0 auto 166px auto
    @media laptop
        max-width 918px
    @media tablet-landscape-medium
        max-width 800px
    @media tablet-landscape-small
        width calc(100% - 60px)
    @media phone
        width calc(100% - 40px)
        max-width 436px

    &__description
        max-width 710px
        margin 0 auto 131px auto
        text-align center
        @media laptop
            width calc(100% - 40px)
            max-width 600px

        & p:not([class])
            font-family "Cormorant"
            font-size 36px
            line-height 40px
            font-weight 300
            color black
            @media laptop
                font-size 32px
                line-height 36px
            @media phone
                font-size 28px
                line-height 32px

    &__list
        display flex
        flex-wrap wrap
        justify-content space-between
        margin 0 0 -60px 0
        padding 0
        list-style none
        @media tablet-landscape-small
            flex-direction column

    &__item
        margin 0 0 60px 0

    &__link-container
        margin 82px 0 0 0
        text-align center

    &__link
        font-family "Helvetica-Neue"
        font-size 12px
        line-height 22px
        font-weight 300
        color main-gold
        text-decoration none
        text-transform uppercase
        letter-spacing 3px
        opacity 1
        transition opacity .3s 0s ease

        &:hover
            opacity .5

.result-preview
    width 436px
    @media laptop
        width 350px
    @media tablet-landscape-small
        width 100%

    &__image-container
        position relative
        padding-top 100%
        @media tablet-landscape-small
            display flex
            flex-wrap nowrap
            width 100%
            padding-top 0
        @media phone
            flex-direction column

    &__image-wrapper
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        background-color black
        overflow hidden
        @media tablet-landscape-small
            position relative
            width calc(50% - 20px)
            padding-top calc(50% - 20px)
        @media tablet-portrait
            width calc(50% - 15px)
            padding-top calc(50% - 15px)
        @media phone
            width 100%
            padding-top 100%

        &:last-child
            width 0
            @media tablet-landscape-small
                width calc(50% - 20px)
                margin 0 0 0 40px
            @media tablet-portrait
                width calc(50% - 15px)
                margin 0 0 0 30px
            @media phone
                width 100%
                padding-top 100%
                margin 20px 0 0 0

    &__image
        position absolute
        top 0
        left 0
        display block
        @media laptop
            transform-origin top left
            transform scale(.82)
        @media tablet-landscape-small
            top 50%
            left 50%
            transform translate(-50%, -50%)
            width 101%
            height 101%
            object-fit cover

    &__hint
        position absolute
        left 20px
        bottom 20px
        display inline-block
        padding 9px 17px 8px 17px
        font-family "Helvetica-Neue"
        font-size 13px
        line-height 16px
        font-weight 300
        color black
        background-color white
        border-radius 16.5px

    &__tags
        margin 50px 0 0 0
        @media tablet-landscape-medium
            margin 30px 0 0 0

.result-preview:nth-child(even)
    & .result-preview__image-container
        margin 80px 0 0 0
        @media tablet-landscape-small
            margin 0

